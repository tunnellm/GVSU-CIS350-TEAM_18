<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Put form controls here-->


    <EditText
        android:id="@+id/AssignmentName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="208dp"
        android:hint="Assignment Name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/AssignmentPoints"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="157dp"
        android:hint="Assignment Points"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/AssignmentWeighting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="106dp"
        android:hint="Assignment Weighting"
        android:inputType="numberDecimal" />

    <DatePicker
        android:id="@+id/assignmentsDatePicker"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:datePickerMode="spinner"
        android:spinnersShown="true"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/CoursesSpinner"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:layout_marginEnd="204dp"
            android:layout_marginBottom="263dp"
            android:prompt="@string/assignments_spinner_prompt"
            android:tag="Choose Course" />
    </RelativeLayout>


</RelativeLayout>
